<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICT638_A2_2021.AgentPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="postsListView" ItemSelected="postsListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Aid}"/>
                                <Label Text="{Binding AName}"/>
                                <Label Text="{Binding APhone}"/>
                                <Label Text="{Binding AEmail}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>